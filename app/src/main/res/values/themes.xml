<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CIPStudio" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="colorOnPrimaryContainer">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogLight</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSecondaryContainer">@color/primary_color</item>
    </style>

    <style name="Theme.CIPStudio.Night" parent="Theme.Material3.DayNight">
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Theme.Chip.CipStudio" parent="Theme.Material3.DayNight">
        <item name="colorOnSurfaceVariant">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnSurface">@color/primary_color</item>
        <item name="colorOnSecondaryContainer">@color/primary_color</item>
        <item name="colorSurface">@color/black</item>
    </style>
</resources>