<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="Title"
        parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="genre_chip" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeWidth">1dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="chipBackgroundColor">@color/light_seconday_color</item>
        <item name="chipStrokeColor">@color/primary_color</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#aacbb4</item>
    </style>
</resources>