<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_favourite"
    app:startDestination="@+id/favouriteScreen">

    <fragment
        android:id="@+id/favouriteScreen"
        android:name="com.cip.cipstudio.view.fragment.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite">
        <action
            android:id="@+id/action_fav_to_gameDetailsFragment3"
            app:destination="@id/gameDetailsFragment3" />
    </fragment>

    <fragment
        android:id="@+id/gameDetailsFragment3"
        android:name="com.cip.cipstudio.view.fragment.GameDetailsFragment"
        android:label="GameDetailsFragment" >
        <action
            android:id="@+id/action_gameDetailsFragment3_self"
            app:destination="@id/gameDetailsFragment3" />
        <action
            app:popUpTo="@id/menu_favourite"
            app:popUpToInclusive="true"
            android:id="@+id/action_gameDetailsFragment3_to_favouriteScreen"
            app:destination="@id/favouriteScreen" />
        <action
            android:id="@+id/action_gameDetailsFragment3_to_platformDetailsDialog2"
            app:destination="@id/platformDetailsDialog2" />
        <action
            android:id="@+id/action_gameDetailsFragment3_to_gameScreenshotDialog2"
            app:destination="@id/gameScreenshotDialog2" />
    </fragment>
    <dialog
        android:id="@+id/platformDetailsDialog2"
        android:name="com.cip.cipstudio.view.dialog.PlatformDetailsDialog"
        android:label="PlatformDetailsDialog" />
    <dialog
        android:id="@+id/gameScreenshotDialog2"
        android:name="com.cip.cipstudio.view.dialog.GameScreenshotDialog"
        android:label="GameScreenshotDialog" />
</navigation>