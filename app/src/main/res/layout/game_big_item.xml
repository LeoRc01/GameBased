<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/i_recently_viewed_game_cover"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true">

        <ImageView
            android:id="@+id/i_recently_viewed_game_iv_blur_background"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardElevation="20dp"
                app:cardCornerRadius="5dp"
                android:layout_width="110dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/i_recently_viewed_game_iv_game_cover_foreground"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:paddingHorizontal="5dp"
                    android:text="GTA 5"
                    android:shadowRadius="10"
                    android:shadowColor="@color/black"
                    android:gravity="center|start|center_vertical"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:id="@+id/i_recently_viewed_game_tv_GameNameBigCover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="5dp"
                    android:text="Shooter, RPG, Adventure"
                    android:shadowRadius="10"
                    android:shadowColor="@color/black"
                    android:gravity="center|start"
                    android:layout_marginStart="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/light_grey"
                    android:id="@+id/i_recently_viewed_game_tv_GameGenresBigCover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="5dp"
                    android:shadowRadius="10"
                    android:shadowColor="@color/black"
                    android:text="04/12/2013"
                    android:gravity="center|start"
                    android:layout_marginStart="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/light_grey"
                    android:id="@+id/i_recently_viewed_game_tv_GameReleaseDateBigCover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
